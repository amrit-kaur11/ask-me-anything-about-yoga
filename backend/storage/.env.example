# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=askme_ai
MONGO_COLLECTION_REQUESTS=requests
MONGO_COLLECTION_FEEDBACK=feedback

# RAG index directory (generated by build_index.py)
INDEX_DIR=storage/chroma

# Retrieval
TOP_K=5

# Embeddings (free/local)
EMBEDDING_PROVIDER=sbert
SBERT_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM via Ollama
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama3.1:8b
OLLAMA_MODEL_FALLBACK=mistral:7b
OLLAMA_TEMPERATURE=0.3
OLLAMA_NUM_CTX=4096
OLLAMA_TIMEOUT_S=120

# Frontend origin for CORS
CORS_ORIGINS=http://localhost:5173

# Important (Docker note):

# If backend runs inside Docker, use:
# OLLAMA_BASE_URL=http://host.docker.internal:11434
